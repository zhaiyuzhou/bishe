<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bishe.dao.ImgDAO">

    <resultMap id="imgResultMap" type="com.bishe.dataobject.ImgDO">
        <id column="id" property="id"/>
        <result column="img_name" property="imgName"/>
        <result column="img_path" property="imgPath"/>
        <result column="father_id" property="fatherId"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <insert id="add" parameterType="com.bishe.dataobject.ImgDO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `img` (img_name, img_path, father_id, gmt_created, gmt_modified)
        VALUES (#{imgName}, #{imgPath}, #{fatherId}, now(), now())
    </insert>

    <select id="selectAllByFatherId" parameterType="java.lang.Long">
        SELECT id, img_name, img_path, father_id, gmt_created, gmt_modified
        FROM `img`
        <where>
            <if test="fatherId != null">
                father_id = #{fatherId}
            </if>
        </where>
    </select>

    <select id="selectByImgName" parameterType="java.lang.String" resultType="com.bishe.dataobject.ImgDO"
            resultMap="imgResultMap">
        SELECT id, img_name, img_path, father_id, gmt_created, gmt_modified
        FROM `img`
        <where>
            <if test="imgName != null and imgName != ''">
                img_name = #{imgName}
            </if>
        </where>
    </select>

    <delete id="DeleteByFatherId" parameterType="java.lang.Long">
        <if test="fatherId != null">
            DELETE FROM `img`
            <where>
                father_id = #{fatherId}
            </where>
        </if>
    </delete>

</mapper>