<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bishe.dao.LikeDynamicDAO">
    <resultMap id="LikeDynamicResultMap" type="com.bishe.dataobject.LikeDynamicDO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="dynamic_id" property="dynamicId"/>
    </resultMap>

    <insert id="add" parameterType="com.bishe.dataobject.LikeDynamicDO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `likedynamic`(user_id, dynamic_id) VALUE (#{userId}, #{dynamicId})
    </insert>

    <delete id="delete" parameterType="com.bishe.dataobject.LikeDynamicDO">
        <if test="userId != null and dynamic_id != null">
            DELETE FROM `likedynamic`
            <where>
                user_id = #{userId} and dynamic_id = #{dynamicId}
            </where>
        </if>
    </delete>

    <select id="findLikeDynamicIDsByUserId" parameterType="java.lang.Long">
        SELECT dynamic_id
        FROM `likedynamic`
        <where>
            <if test="userId != null">
                user_id = #{userId}
            </if>
        </where>
    </select>
</mapper>