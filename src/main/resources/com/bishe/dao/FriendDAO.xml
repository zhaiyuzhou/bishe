<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bishe.dao.FriendDAO">
    <resultMap id="friendResultMap" type="com.bishe.dataobject.FriendDO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="friend_id" property="friendId"/>
    </resultMap>

    <insert id="add" parameterType="com.bishe.dataobject.AttentionDO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `friend` (user_id, friend_id)
            VALUE (#{userId}, #{friendId})
    </insert>

    <delete id="delete" parameterType="com.bishe.dataobject.AttentionDO">
        <if test="userId != null and friendId != null">
            DELETE FROM `friend`
            <where>
                user_id = #{userId} and friend_id = #{friendId}
            </where>
        </if>
    </delete>

    <select id="findByUserId" resultType="java.lang.Long">
        SELECT friend_id
        FROM `friend`
        <where>
            <if test="userId != null">
                user_id = #{userId}
            </if>
        </where>
    </select>
</mapper>