<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bishe.dao.VideoDAO">

    <resultMap id="videoResultMap" type="com.bishe.dataobject.ImgDO">
        <id column="id" property="id"/>
        <result column="video_name" property="videoName"/>
        <result column="video_path" property="videoPath"/>
        <result column="father_id" property="fatherId"/>
        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <insert id="add" parameterType="com.bishe.dataobject.VideoDO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO `video` (video_name, video_path, father_id, gmt_created, gmt_modified)
        VALUES (#{videoName}, #{videoPath}, #{fatherId}, now(), now())
    </insert>

    <select id="selectAllByFatherId" parameterType="java.lang.Long">
        SELECT id, video_name, video_path, father_id, gmt_created, gmt_modified
        FROM `video`
        <where>
            <if test="fatherId != null">
                father_id = #{fatherId}
            </if>
        </where>
    </select>

    <select id="selectByVideoName" parameterType="java.lang.String" resultType="com.bishe.dataobject.VideoDO"
            resultMap="videoResultMap">
        SELECT id, video_name, video_path, father_id, gmt_created, gmt_modified
        FROM `video`
        <where>
            <if test="videoName != null and videoName != ''">
                video_name = #{videoName}
            </if>
        </where>
    </select>

    <delete id="DeleteByFatherId" parameterType="java.lang.Long">
        <if test="fatherId != null">
            DELETE FROM `video`
            <where>
                father_id = #{fatherId}
            </where>
        </if>
    </delete>

</mapper>